<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="top"
        android:layout_weight="0.22">

        <TextView android:text="@string/title_name"
            android:gravity="center"
            android:textColor="#DC2525"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="2"
        android:rowCount="2"
        android:weightSum="1"
        android:layout_marginTop="30dp">


        <ImageButton
            android:layout_width="45dp"
            android:layout_height="176dp"
            android:id="@+id/nestBtn"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@mipmap/nest"
            android:layout_weight="0.45" />

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="176dp">
        </LinearLayout>

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="176dp"
            android:id="@+id/philipsBtn"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@mipmap/philips"
            android:layout_weight="0.47" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">


        <ImageButton
            android:id="@+id/micBtn"
            android:layout_width="100dp"
            android:layout_height="188dp"
            android:background="@mipmap/mic"
            android:layout_weight="0.41"
           android:layout_marginLeft="90dp"
            android:layout_marginTop="35dp"/>

    </LinearLayout>


</LinearLayout>